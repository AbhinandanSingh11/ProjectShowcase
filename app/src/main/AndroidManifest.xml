<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nimus.android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/dsccu"
        android:label="@string/app_name"
        android:roundIcon="@drawable/dsccu"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ActivityUploadResources"
                  android:screenOrientation="portrait"/>
        <activity android:name=".EventResources"
                  android:screenOrientation="portrait"/>
        <activity android:name=".SpecialEventsDesc"
                  android:screenOrientation="portrait"/>
        <activity android:name=".SpecialEvents"
                  android:screenOrientation="portrait"/>
        <activity android:name=".Settings"
                  android:screenOrientation="portrait"/>
        <activity android:name=".VisitUser"
                  android:screenOrientation="portrait"/>
        <activity android:name=".SplashScreen"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MyProjectsAcivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".UploadActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".RecentyReleasedActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".projectDesc"
                  android:screenOrientation="portrait"/>
        <activity android:name=".ActivityProfile"
                  android:screenOrientation="portrait"/>
        <activity android:name=".LoginActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".Browser"
                  android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity"
                  android:screenOrientation="portrait"/>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />

        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>